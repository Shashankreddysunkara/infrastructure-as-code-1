{
  "ca_file": "/consul/config/ca_cert.pem",
  "key_file": "/consul/config/consul_key.pem",
  "cert_file": "/consul/config/consul_cert.pem",
  "log_level": "info",
  "verify_outgoing": true,
  "leave_on_terminate": true,
  "disable_update_check": true,
  "enable_script_checks": true,
  "skip_leave_on_interrupt": true,
  "ports": { "https": 8500, "http": -1 },
  "dns_config": {
    "allow_stale": true,
    "max_stale": "1s",
    "service_ttl": {
      "*": "5s"
    }
  }
}

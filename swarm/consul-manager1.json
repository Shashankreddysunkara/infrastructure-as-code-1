{
  "cert_file": "/consul/config/server_cert.pem",
  "log_level": "info",
  "leave_on_terminate": true,
  "translate_wan_addrs": true,
  "disable_update_check": true,
  "enable_script_checks": true,
  "skip_leave_on_interrupt": true,
  "dns_config": {
    "allow_stale": true,
    "max_stale": "1s",
    "service_ttl": {
      "*": "5s"
    }
  },
  "services": [{
      "name": "elasticsearch01",
      "tags": [
          "tcp", "elasticsearch"
      ],
      "port": 9200,
      "checks": [{
          "id": "elasticsearch01",
          "name": "Elasticsearch",
          "tcp": "elasticsearch01:9200",
          "interval": "120s"
      }]
  },{
      "name": "logstash01",
      "tags": [
          "tcp", "logstash"
      ],
      "port": 12201,
      "checks": [{
          "id": "logstash01",
          "name": "Logstash",
          "args": ["nc", "-z", "-u", "-v", "logstash01", "12201"],
          "interval": "120s"
      }]
  }]
}

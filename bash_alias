alias pk_create='packer build --var-file=../../config_vars.json --var-file=../../other_vars.json --var-file=../../network_vars.json --var-file=../../version_vars.json packer.json'
alias tf_init='terraform init -input=false -var-file=../../config.tfvars -var-file=../../other.tfvars -var-file=../../network.tfvars -var-file=../../version.tfvars'
alias tf_plan='terraform plan -input=false -out=ftplan -var-file=../../config.tfvars -var-file=../../other.tfvars -var-file=../../network.tfvars -var-file=../../version.tfvars'
alias tf_apply='terraform apply -input=false ftplan'
alias tf_destroy='terraform destroy -force -var-file=../../config.tfvars -var-file=../../other.tfvars -var-file=../../network.tfvars -var-file=../../version.tfvars'
alias tf_refresh='terraform refresh -input=false -var-file=../../config.tfvars -var-file=../../other.tfvars -var-file=../../network.tfvars -var-file=../../version.tfvars'

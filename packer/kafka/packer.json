{
  "variables": {
    "key_name": "",
    "key_path": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "eu-west-1",
    "aws_build_regions" : "",
    "aws_instance_type": "t2.small",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "ami_name_prefix": "kafka",
    "bastion_host": "",
    "bastion_username": "ec2-user",
    "kafka_version": "",
    "scala_version": "",
    "base_version": "",
    "stream_tag": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "vpc_id": "{{user `aws_vpc_id`}}",
    "subnet_id": "{{user `aws_subnet_id`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "base-{{user `base_version`}}-*",
        "root-device-type": "ebs"
      },
      "owners": ["991512327633"],
      "most_recent": true
    },
    "instance_type": "{{user `aws_instance_type`}}",
    "ami_name": "{{user `ami_name_prefix`}}-{{user `kafka_version`}}-{{user `base_version`}}-{{timestamp}}",
    "communicator": "ssh",
    "ssh_pty": "true",
    "ssh_timeout": "10m",
    "ssh_username": "ubuntu",
    "ssh_keypair_name": "{{user `key_name`}}",
    "ssh_private_key_file": "{{user `key_path`}}",
    "ssh_bastion_host": "{{user `bastion_host`}}",
    "ssh_bastion_username": "{{user `bastion_username`}}",
    "ssh_bastion_private_key_file": "{{user `key_path`}}",
    "tags": {
      "stream": "{{user `stream_tag`}}"
    }
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/kafka.sh",
      "environment_vars": [
        "KAFKA_VERSION={{user `kafka_version`}}",
        "SCALA_VERSION={{user `scala_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ]
}

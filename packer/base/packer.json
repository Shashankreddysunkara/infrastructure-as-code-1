{
  "variables": {
    "key_name": "",
    "key_path": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_security_token": "",
    "aws_region": "eu-west-1",
    "aws_build_regions" : "",
    "aws_ubuntu_ami": "",
    "aws_instance_type": "t2.small",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "ami_name_prefix": "base",
    "filebeat_version": "5.2.1",
    "topbeat_version": "1.3.1",
    "consul_version": "0.7.5",
    "base_version": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "token": "{{user `aws_security_token`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_ubuntu_ami`}}",
    "instance_type": "{{user `aws_instance_type`}}",
    "vpc_id": "{{user `aws_vpc_id`}}",
    "subnet_id": "{{user `aws_subnet_id`}}",
    "ami_name": "{{user `ami_name_prefix`}}_{{user `base_version`}}-{{timestamp}}",
    "ami_regions": "{{user `aws_build_regions`}}",
    "ssh_pty": "true",
    "ssh_timeout": "10m",
    "ssh_username": "ubuntu",
    "ssh_keypair_name": "{{user `key_name`}}",
    "ssh_private_key_file": "{{user `key_path`}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/tools.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/java.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/docker.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/puppet.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/filebeat.sh",
      "environment_vars": [
        "FILEBEAT_VERSION={{user `filebeat_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/topbeat.sh",
      "environment_vars": [
        "TOPBEAT_VERSION={{user `topbeat_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/consul.sh",
      "environment_vars": [
        "CONSUL_VERSION={{user `consul_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/puppet-agent.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/update.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ]
}

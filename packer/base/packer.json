{
  "variables": {
    "key_name": "",
    "key_path": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_security_token": "",
    "aws_region": "eu-west-1",
    "aws_build_regions" : "",
    "aws_instance_type": "t2.small",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "ami_name_prefix": "base",
    "bastion_host": "",
    "bastion_username": "ec2-user",
    "filebeat_version": "",
    "topbeat_version": "",
    "consul_version": "",
    "base_version": "",
    "stream_tag": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "token": "{{user `aws_security_token`}}",
    "region": "{{user `aws_region`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "*ubuntu-xenial-16.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "{{user `aws_instance_type`}}",
    "vpc_id": "{{user `aws_vpc_id`}}",
    "subnet_id": "{{user `aws_subnet_id`}}",
    "ami_name": "{{user `ami_name_prefix`}}-{{user `base_version`}}-{{timestamp}}",
    "ami_regions": "{{user `aws_build_regions`}}",
    "communicator": "ssh",
    "ssh_pty": "true",
    "ssh_timeout": "10m",
    "ssh_username": "ubuntu",
    "ssh_keypair_name": "{{user `key_name`}}",
    "ssh_private_key_file": "{{user `key_path`}}",
    "ssh_bastion_host": "{{user `bastion_host`}}",
    "ssh_bastion_username": "{{user `bastion_username`}}",
    "ssh_bastion_private_key_file": "{{user `key_path`}}",
    "tags": {
      "stream": "{{user `stream_tag`}}"
    }
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/tools.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/java.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/filebeat.sh",
      "environment_vars": [
        "FILEBEAT_VERSION={{user `filebeat_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/topbeat.sh",
      "environment_vars": [
        "TOPBEAT_VERSION={{user `topbeat_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/aws-cli.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/consul.sh",
      "environment_vars": [
        "CONSUL_VERSION={{user `consul_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/update.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ]
}

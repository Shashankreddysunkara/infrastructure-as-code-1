{
  "variables": {
    "key_name": "",
    "key_path": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "eu-west-1",
    "aws_build_regions" : "",
    "aws_source_ami": "",
    "aws_instance_type": "t2.small",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "ami_name_prefix": "kibana",
    "elasticsearch_version": "5.2.1",
    "kibana_version": "5.2.1",
    "base_version": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "vpc_id": "{{user `aws_vpc_id`}}",
    "subnet_id": "{{user `aws_subnet_id`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "{{user `aws_instance_type`}}",
    "ami_name": "{{user `ami_name_prefix`}}_{{user `kibana_version`}}-base_{{user `base_version`}}-{{timestamp}}",
    "ssh_pty": "true",
    "ssh_timeout": "10m",
    "ssh_username": "ubuntu",
    "ssh_keypair_name": "{{user `key_name`}}",
    "ssh_private_key_file": "{{user `key_path`}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/elasticsearch.sh",
      "environment_vars": [
        "ELASTIC_VERSION={{user `elasticsearch_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/kibana.sh",
      "environment_vars": [
        "KIBANA_VERSION={{user `kibana_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ]
}

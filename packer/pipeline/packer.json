{
  "variables": {
    "key_name": "",
    "key_path": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "eu-west-1",
    "aws_build_regions" : "",
    "aws_instance_type": "t2.small",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "ami_name_prefix": "pipeline",
    "bastion_host": "",
    "bastion_username": "ec2-user",
    "base_version": "",
    "jenkins_version": "",
    "sonarqube_version": "",
    "artifactory_version": "",
    "mysqlconnector_version": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "vpc_id": "{{user `aws_vpc_id`}}",
    "subnet_id": "{{user `aws_subnet_id`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "base-{{user `base_version`}}-*",
        "root-device-type": "ebs"
      },
      "owners": ["991512327633"],
      "most_recent": true
    },
    "instance_type": "{{user `aws_instance_type`}}",
    "ami_name": "{{user `ami_name_prefix`}}-{{user `base_version`}}-{{timestamp}}",
    "communicator": "ssh",
    "ssh_pty": "true",
    "ssh_timeout": "10m",
    "ssh_username": "ubuntu",
    "ssh_keypair_name": "{{user `key_name`}}",
    "ssh_private_key_file": "{{user `key_path`}}",
    "ssh_bastion_host": "{{user `bastion_host`}}",
    "ssh_bastion_username": "{{user `bastion_username`}}",
    "ssh_bastion_private_key_file": "{{user `key_path`}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/mysql.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "environment_vars": [
        "SONARQUBE_VERSION={{user `sonarqube_version`}}"
      ],
      "script": "scripts/sonarqube.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ARTIFACTORY_VERSION={{user `artifactory_version`}}",
        "MYSQLCONNECTOR_VERSION={{user `mysqlconnector_version`}}"
      ],
      "script": "scripts/artifactory.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "environment_vars": [
        "JENKINS_VERSION={{user `jenkins_version`}}"
      ],
      "script": "scripts/jenkins.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ]
}
